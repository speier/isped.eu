---
const { t } = Astro.props;
---
<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>{t.title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Vast+Shadow&display=swap">
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/text.css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <noscript>
        <link rel="stylesheet" href="/css/noscript.css" />
    </noscript>
</head>
<body class="is-preload">
    <section id="sidebar">
        <img src="/images/isped_logo_nobg.png" width="220" style="padding: 5px;" />
        <div class="inner">
            <nav>
                <ul>
                    <li><a href="#intro">{t.menuIntro}</a></li>
                    <li><a href="#who">{t.menuWho}</a></li>
                    <li><a href="#what">{t.menuWhat}</a></li>
                    <li><a href="#contact">{t.menuContact}</a></li>
                </ul>
            </nav>
        </div>
    </section>
    <div id="wrapper">	
        <!-- Intro -->
        <section id="intro" class="wrapper style1 fullscreen fade-up">
            <div class="inner">
                <h1 class="title-name">{t.introTitle}</h1>
                <p>{t.introBody}</p>
                <ul class="actions">
                    <li><a href="#who" class="button scrolly">{t.more}</a></li>
                </ul>
            </div>
        </section>

        <!-- Who we are -->
        <section id="who" class="wrapper style2 spotlights">
            <section>
                <a href="#" class="image"><img src="/images/truck_transportation.jpeg" alt="" data-position="center center" /></a>
                <div class="content">
                    <div class="inner">
                        <h2>{t.bestSolutionTitle}</h2>
                        <p>{t.bestSolutionBody}</p>
                        <ul class="actions">
                            <li><a href="#what" class="button scrolly">{t.next}</a></li>
                        </ul>
                    </div>
                </div>
            </section>
            <section>
                <a href="#" class="image"><img src="/images/road_transportation.png" alt="" data-position="top center" /></a>
                <div class="content">
                    <div class="inner">
                        <h2>{t.bestFreightForwardersTitle}</h2>
                        <p>{t.bestFreightForwardersBody}</p>
                        <ul class="actions">
                            <li><a href="#what" class="button scrolly">{t.next}</a></li>
                        </ul>
                    </div>
                </div>
            </section>
            <section>
                <a href="#" class="image"><img src="/images/stock_244807532.jpeg" alt="" data-position="25% 25%" /></a>
                <div class="content">
                    <div class="inner">
                        <h2>{t.logisticsConsultingTitle}</h2>
                        <p>{t.logisticsConsultingBody}</p>
                        <ul class="actions">
                            <li><a href="#what" class="button scrolly">{t.next}</a></li>
                        </ul>
                    </div>
                </div>
            </section>
        </section>

        <!-- What we do -->
        <section id="what" class="wrapper style3 fade-up">
            <div class="inner">
                <h2>{t.whatWeDoTitle}</h2>
                <div class="features">
                    <section>
                        <span class="icon solid major fa-truck"></span>
                        <h3>{t.roadFreightTitle}</h3>
                        <p>
                        <ul>
                            <li>{t.roadFreightItem1}</li>
                            <li>{t.roadFreightItem2}</li>
                            <li>{t.roadFreightItem3}</li>
                        </ul>
                        </p>
                    </section>
                    <section>
                        <span class="icon solid major fa-ship"></span>
                        <h3>{t.oceanFreightTitle}</h3>
                        <p>
                        <ul>
                            <li>{t.oceanFreightItem1}</li>
                            <li>{t.oceanFreightItem2}</li>
                            <li>{t.oceanFreightItem3}</li>
                        </ul>
                        </p>
                    </section>
                    <section>
                        <span class="icon solid major fa-plane"></span>
                        <h3>{t.airFreightTitle}</h3>
                        <p>
                        <ul>
                            <li>{t.airFreightItem1}</li>
                            <li>{t.airFreightItem2}</li>
                            <li>{t.airFreightItem3}</li>
                        </ul>
                        </p>
                    </section>
                    <section>
                        <span class="icon solid major fa-desktop"></span>
                        <h3>{t.logisticsConsultingTitle}</h3>
                        <p>
                        <ul>
                            <li>{t.logisticsConsultingItem1}</li>
                            <li>{t.logisticsConsultingItem2}</li>
                            <li>{t.logisticsConsultingItem3}</li>
                            <li>{t.logisticsConsultingItem4}</li>
                        </ul>
                        </p>
                    </section>
                </div>
            </div>
        </section>

        <!-- Contact -->
        <section id="contact" class="wrapper style1 fade-up">
            <div class="inner">
                <h2>{t.contactTitle}</h2>
                <p>{t.contactBody}</p>
                <div class="split style1">
                    <section>
                        <img src="/images/72674897_padded_logo.png" width="100%" />
                    </section>
                    <section>
                        <ul class="contact">
                            <li>
                                <h3>Email</h3>
                                <a href="#">{t.email}</a>
                            </li>
                            <li>
                                <h3>{t.phoneTitle}</h3>
                                <span>{t.phone}</span>
                            </li>
                            <li>
                                <!-- Social -->
                                <br />
                                <ul class="icons">
                                    <li><a href="https://facebook.com/iSped.eu" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                                    <li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
                                    <li><a href="#" class="icon brands fa-linkedin-in"><span class="label">LinkedIn</span></a></li>
                                    <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                                </ul>
                            </li>
                        </ul>
                    </section>
                </div>
            </div>
        </section>

    </div>
    <footer id="footer" class="wrapper style1-alt">
        <div class="inner">
            <ul class="menu">
                <li>&copy; iSped. All rights reserved.</li>
            </ul>
        </div>
    </footer>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.scrollex.min.js"></script>
    <script src="/js/jquery.scrolly.min.js"></script>
    <script src="/js/browser.min.js"></script>
    <script src="/js/breakpoints.min.js"></script>
    <script src="/js/util.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
